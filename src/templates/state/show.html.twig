{% extends 'base.html.twig' %}

{% block title %}{% trans from "title" %}State{% endtrans %}{% endblock %}

{% block body %}
<section class="wrapper">
    <div class="button-div">
        <a class="btn-top" href="{{ path('state_index') }}">{% trans from "btn" %}Back to list{% endtrans %}</a>
        <a class="btn-top" href="{{ path('state_edit', {'id': state.id}) }}">{% trans from "btn" %}Edit{% endtrans %}</a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ state.id }}</td>
            </tr>
            <tr>
                <th>{% trans from "state" %}Name{% endtrans %}</th>
                <td>{{ state.name }}</td>
            </tr>
            <tr>
                <th>{% trans from "state" %}Is Final State{% endtrans %}</th>
                <td>{{ state.isfinalState ? "Yes"|trans({}, 'state') : "No"|trans({}, 'state') }}</td>

            </tr>
        </tbody>
    </table>
    <div class="button-div">
        {{ include('state/_delete_form.html.twig') }}
        {{ include('state/_modal_delete.html.twig') }}
    </div>

</section>

{% endblock %}
