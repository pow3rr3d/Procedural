{% extends 'base.html.twig' %}

{% block title %}Process{% endblock %}

{% block body %}
<section class="wrapper">
    <div class="button-div">
        <a class="btn-top" href="{{ path('process_index') }}">back to list</a>
        <a class="btn-top" href="{{ path('process_edit', {'id': process.id}) }}">edit</a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ process.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ process.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ process.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ process.createdAt ? process.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ process.updatedAt ? process.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Steps</th>
                <td>
                    <ul>
                    {% for step in process.steps %}
                        <li>
                        <b>{{ step.title }}</b><br>
                        {{ step.description }}<br><br>
                        {{ step.isRequired ? "Required" : "Not Required"}}<br>
                        </li>
                        <br>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="button-div">

        {{ include('process/_delete_form.html.twig') }}
        {{ include('process/_modal_delete.html.twig') }}
    </div>




</section>
{% endblock %}
