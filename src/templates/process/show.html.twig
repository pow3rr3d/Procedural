{% extends 'base.html.twig' %}

{% block title %}{% trans from "title" %}Process{% endtrans %}{% endblock %}

{% block body %}
<section class="wrapper">
    <div class="button-div">
        <a class="btn-top" href="{{ path('process_index') }}">{% trans from "btn" %}Back to list{% endtrans %}</a>
        <a class="btn-top" href="{{ path('process_edit', {'id': process.id}) }}">{% trans from "btn" %}Edit{% endtrans %}</a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ process.id }}</td>
            </tr>
            <tr>
                <th>{% trans from "process" %}Name{% endtrans %}</th>
                <td>{{ process.name }}</td>
            </tr>
            <tr>
                <th>{% trans from "process" %}Description{% endtrans %}</th>
                <td>{{ process.description }}</td>
            </tr>
            <tr>
                <th>{% trans from "process" %}Created At{% endtrans %}</th>
                <td>{{ process.createdAt ? process.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans from "process" %}Updated At{% endtrans %}</th>
                <td>{{ process.updatedAt ? process.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans from "process" %}Steps{% endtrans %}</th>
                <td>
                    <ul>
                    {% for step in process.steps %}
                        <li>
                        <b>{{ step.title }}</b><br>
                        {{ step.description }}<br><br>
                        {{ step.isRequired ? "Required"|trans({}, 'process'): "Not Required"|trans({}, 'process')}}<br>
                        </li>
                        <br>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="button-div">

        {{ include('process/_delete_form.html.twig') }}
        {{ include('process/_modal_delete.html.twig') }}
    </div>




</section>
{% endblock %}
