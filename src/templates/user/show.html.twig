{% extends 'base.html.twig' %}

{% block title %}{% trans from "title" %}User{% endtrans %}{% endblock %}

{% block body %}
    <section class="wrapper">
        <div class="button-div">
            <a class="btn-top" href="{{ path('user_index') }}">{% trans from "btn" %}Back to list{% endtrans %}</a>
            <a class="btn-top" href="{{ path('user_edit', {'id': user.id}) }}">{% trans from "btn" %}Edit{% endtrans %}</a>
        </div>
        <table class="table">
            <tbody>
            <tr>
                <th>#</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{% trans from "user" %}Name{% endtrans %}</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>{% trans from "user" %}Surname{% endtrans %}</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th>{% trans from "user" %}Email{% endtrans %}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{% trans from "user" %}Roles{% endtrans %}</th>
                <td>{% for role in user.roles %}{{ role }}{% endfor %}</td>
            </tr>
            </tbody>
        </table>
        <div class="button-div">
            {% if user.id is not same as app.user.id %}
                {{ include('user/_delete_form.html.twig') }}
                {{ include('user/_modal_delete.html.twig') }}
            {% endif %}
        </div>

    </section>
{% endblock %}
