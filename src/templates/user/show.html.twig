{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <section class="wrapper">
        <div class="button-div">
            <a class="btn-top" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
            <a class="btn-top" href="{{ path('user_index') }}">back to list</a>
        </div>
        <table class="table">
            <tbody>
            <tr>
                <th>#</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.Name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ user.Surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.Email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% for role in user.Roles %}{{ role }}{% endfor %}</td>
            </tr>
            </tbody>
        </table>
        <div class="button-div">
            {% if user.id is not same as app.user.id %}
                {{ include('user/_delete_form.html.twig') }}
                {{ include('user/_modal_delete.html.twig') }}
            {% endif %}
        </div>

    </section>
{% endblock %}
