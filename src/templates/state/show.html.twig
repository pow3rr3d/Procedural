{% extends 'base.html.twig' %}

{% block title %}State{% endblock %}

{% block body %}
<section class="wrapper">
    <div class="button-div">
        <a class="btn-top" href="{{ path('state_edit', {'id': state.id}) }}">edit</a>
        <a class="btn-top" href="{{ path('state_index') }}">back to list</a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ state.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ state.Name }}</td>
            </tr>
            <tr>
                <th>Is Final State</th>
                <td>{{ state.IsfinalState ? "True" : "False" }}</td>
            </tr>
        </tbody>
    </table>
    <div class="button-div">
        {{ include('state/_delete_form.html.twig') }}
        {{ include('state/_modal_delete.html.twig') }}
    </div>

</section>

{% endblock %}
