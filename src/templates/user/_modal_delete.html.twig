<div class="modal fade" id="modal_delete{{ user.id }}" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Are you sure you want to delete this user?
            </div>
            <div class="modal-body">
                <p class="text-left">#<b>{{ user.id }}</b></p>
                <p class="text-left"><b>{{ user.Name }}</b></p>
                <p class="text-left"><b>{{ user.Email }}</b></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn cancel-btn btn-default" data-bs-dismiss="modal">Cancel</button>
                <form method="post" action="{{ path("user_delete", {id: user.id}) }}"
                      style="display: inline-block">
                    <input type="hidden" name="_method" value="delete">
                    <input type="hidden" name="_token" data-bs-toggle="modal"
                           data-bs-target="#confirm-submit{{ user.id }}"
                           value="{{ csrf_token('delete' ~ user.id) }}">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>